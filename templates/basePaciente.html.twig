<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}KineTime{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous" />
        <link href="{{ asset('assets/css/homeStyle.css') }}" type="text/css" rel="stylesheet" />
        <link href="{{ asset('assets/css/paciente.css') }}" type="text/css" rel="stylesheet" />
    {% endblock %}
    {% block javascripts %}{% endblock %}
</head>
<body>
<div class="contenedor">
    {% block header %}
        <header>
            <div class="encabezado">
                <a href="{{ path('homePaciente') }}"><img src="{{ asset('assets/img/Logo.png') }}" alt="logo"/></a>
            </div>
            <div class="navegacion">
                <nav>
                    <div class="dropdown">
                        <button class="dropbtn">Paciente</button>
                        <div class="dropdown-content">
                            <a href="{{ path('agregarPaciente') }}">Ingreso Nuevo Paciente</a>
                            <a href="{{ path('listarPaciente') }}">Ficha Paciente</a>
                        </div>
                    </div>
                    <div class="dropdown">
                        <button class="dropbtn">Kinesiologo</button>
                        <div class="dropdown-content">
                            <a href="{{ path('agregarKinesiologo') }}">Ingreso Nuevo Kinesiologo</a>
                            <a href="{{ path('listarKinesiologo') }}">Kinesiologos</a>
                        </div>
                    </div>
                    <div class="dropdown">
                        <button class="dropbtn">Mensajer√≠a</button>
                        <div class="dropdown-content">
                            <a href="{{ path('chat') }}">Chats</a>
                        </div>
                    </div>
                    <div class="dropdown">
                        <button class="dropbtn">Ejercicios</button>
                        <div class="dropdown-content">
                            <a href="{{ path('agregarEjercicio') }}">Agregar Ejercicios</a>
                            <a href="{{ path('mantenedorEjercicios') }}">Gestionar Ejercicios</a>
                        </div>
                    </div>
                    <div class="dropdown">
                        <button class="dropbtn"><a href="{{ path('logout') }}">Logout</a></button>
                    </div>
                </nav>
            </div>
        </header>
    {% endblock %}
    {% block body %}{% endblock %}
</div>
</body>
</html>
