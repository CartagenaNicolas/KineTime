{% extends "base.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous" />
    <link href="{{ asset('assets/css/homeStyle.css') }}" type="text/css" rel="stylesheet" />
    <link href="{{ asset('assets/css/agregarEjercicio.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}
{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
{% endblock %}

{% block body %}
    <main>
        <h2>Ingreso de Ejercicio</h2>
        <div class="ficha">
            <h3>Datos Personales</h3>
            <div class="datos">
                <div class="nombre">
                    <label for="nombre">Nombre del ejercicio:</label>
                    <input type="text" id="nombre" name="_nombre" />
                </div>

                <div class="tipo">
                    <label for="tipo">Tipo de ejercicio:</label>
                    <input type="text" id="tipo" name="_tipo" />
                </div>

                <div class="objetivo">
                    <label for="objetivo">Objetivo del ejercicio:</label>
                    <input type="number" id="objetivo" name="_objetivo" />
                </div>

                <div class="video">
                    <label for="video">Video:</label>
                    <input type="file" id="video" name="_video" />
                </div>
            </div>
        </div>

        <div class="boton" align="center">
            <input type="submit" value="Registrar" />
        </div>
    </main>
{% endblock %}