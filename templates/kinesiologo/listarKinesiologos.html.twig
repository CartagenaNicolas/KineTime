{% extends "base.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous" />
    <link href="{{ asset('assets/css/homeStyle.css') }}" type="text/css" rel="stylesheet" />
    <link href="{{ asset('assets/css/listarKinesiologo.css') }}" type="text/css" rel="stylesheet"/>
{% endblock %}
{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
{% endblock %}

{% block body %}
    <main>
        <div class="fichas">
            <div class="buscador">
                <label for="">Buscar</label>
                <input type="text" name="_buscar" id="buscar" placeholder="Nombre"/>
                <input type="submit" value="Enviar"/>
            </div>
            <div class="lista">
                {{ dump(kinesiologos) }}
                {% for kinesiologo in kinesiologos %}
                    <div class="nombre">
                        {% if kinesiologo.id == 1 %}
                            <p class="titulo">Nombres</p>
                        {% endif %}
                        <p class="detalle">
                            {% if kinesiologo.nombre == "admin" %}
                                 Administrador
                            {% else %}
                                {{ kinesiologo.nombre }}
                            {% endif %}
                        </p>
                    </div>
                    <div class="especialidad">
                        {% if kinesiologo.id == 1 %}
                            <p class="titulo">Especialidad</p>
                        {% endif %}
                        <p class="detalle">{{ kinesiologo.especialidad }}</p>
                    </div>
                    <div class="ver-mas">
                        {% if kinesiologo.id == 1 %}
                            <p class="titulo">Ficha</p>
                        {% endif %}
                        <p class="detalle"><a href="#">Ver MÃ¡s</a></p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </main>
{% endblock %}