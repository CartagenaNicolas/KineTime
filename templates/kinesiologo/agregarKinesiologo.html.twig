        <div class="ficha">
            <h4>Datos Personales</h4>
            <div class="datosP">
                
                <div class="rut">
                    <label for="rut">Rut:</label>
                    <input type="text" id="rut" name="_rut" />
                </div>

                <div class="nombre">
                    <label for="nombre">Nombre:</label>
                    <input type="text" id="nombre" name="_nombre" />
