{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous" />
    <link href="{{ asset('assets/css/homeStyle.css') }}" type="text/css" rel="stylesheet" />
    <link href="{{ asset('assets/css/paciente.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <script src="{{ asset('assets/js/nuevoPaciente.js') }}"></script>
{% endblock %}

{% block body %}
    <main>
        <h2>Ficha Kinesica</h2>
        <div class="ficha">
            <h3>Datos Personales</h3>
            <div class="datosP">
                <div class="rut">
                    <label for="rut">Rut:</label>
                    <input type="text" id="rut" name="_rut" />
                </div>

                <div class="nombre">
                    <label for="nombre">Nombre:</label>
                    <input type="text" id="nombre" name="_nombre" />
                </div>

                <div class="edad">
                    <label for="edad">Edad:</label>
                    <input type="number" id="edad" name="_edad" />
                </div>

                <div class="direccion">
                    <label for="rut">Direccion:</label>
                    <input type="text" id="direccion" name="_direccion" />
                </div>

                <div class="ocupacion">
                    <label for="ocupacion">Ocupacion:</label>
                    <input type="text" id="ocupacion" name="_ocupacion" />
                </div>

                <div class="deporte">
                    <label for="deportes">Deportes</label>
                    <div class="deportes" id="deportes">
                        <div id="deporte1">
                            <label for="cbxDep1">Deporte1</label>
                            <input type="checkbox" name="_dep1" id="cbxDep1" value=""/>
                        </div>
                        <div id="deporte2">
                            <label for="cbxDep2">Deporte2</label>
                            <input type="checkbox" name="_dep2" id="cbxDep2" value=""/>
                        </div>
                        <div id="deporte3">
                            <label for="cbxDep3">Deporte3</label>
                            <input type="checkbox" name="_dep3" id="cbxDep3" value=""/>
                        </div>
                        <div id="deporte4">
                            <label for="cbxDep4">Deporte4</label>
                            <input type="checkbox" name="_dep4" id="cbxPer4" value=""/>
                        </div>
                        <div id="deporte5">
                            <label for="cbxDep5">Otro</label>
                            <input type="checkbox" name="_dep5" id="cbxDep5" onclick="habilitar('txtDep5')"/>
                            <input type="text" name="_txtDep5" id="txtDep5" disabled>
                        </div>
                    </div>
                </div>
            </div>
            <hr/>
            <h3>Antecedentes Clínicos</h3>
            <div class="antecedentes">
                <div class="diagnostico">
                    <label for="diagnostico">Diagnóstico:</label>
                    <input type="text" id="diagnostico" name="_Diagnostico" />
                </div>

                <div class="morbilidad">
                    <label for="morbilidad">Morbilidad:</label>
                    <input type="text" id="morbilidad" name="_Morbilidad" />
                </div>

                <div class="medico">
                    <label for="medico">Medico:</label>
                    <input type="text" id="medico" name="_medico" />
                </div>
            </div>
            <hr/>
            <h3>Anamnesis - Examen Físico</h3>
            <div class="examenFisico">
                <div class="fecha">
                    <label for="fecha">Fecha:</label>
                    <input type="date" id="fecha" name="_fecha" />
                </div>

                <div class="observaciones">
                    <label>Observaciones:</label>
                    <textarea id="obs" name="_obs" rows="10" cols="50"></textarea>
                </div>
            </div>
        </div>

        <div class="boton" align="center">
            <input type="submit" value="Registrar" />
        </div>
    </main>
{% endblock %}